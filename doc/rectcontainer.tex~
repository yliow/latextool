\section{RectContainer}

\begin{samepage}
Horizontal array:
\begin{python}
s = r"""
from latextool_basic import *
p = Plot()

c = RectContainer(x=1, y=1)
for x in '1234578':
    c += Rect2(x0=0, y0=0, x1=1, y1=1, 
               linewidth=0.2, linecolor='red!30!white',
               label=r'{\texttt{%s}}' % x)
p += c
p += Grid()
print p
"""
from latextool_basic import console, makeandincludegraphics
print console(s.strip())
print makeandincludegraphics(python=s)
\end{python}
\end{samepage}




\begin{samepage}
Using []:
\begin{python}
s = r"""
from latextool_basic import *
p = Plot()

c = RectContainer(x=1, y=1)
for x in 'abcdefgh':
    c += Rect2(x0=0, y0=0, x1=1, y1=1, 
               linewidth=0.2, linecolor='red!30!white',
               label=x)
p += c
p += bend(c[2].top(), c[5].top())
p += Grid()
print p
"""
from latextool_basic import console, makeandincludegraphics
print console(s.strip())
print makeandincludegraphics(python=s)
\end{python}
\end{samepage}



\begin{samepage}
Snipped array ... version 1
\begin{python}
s = r"""
from latextool_basic import *
p = Plot()

c = RectContainer(x=1, y=1)
for x in [1,2,3,'...',99]:
    if x != '...':
        c += Rect2(x0=0, y0=0, x1=1, y1=1, 
                   label=r'{\texttt{%s}}' % x)
    else:
        c += Rect2(x0=0, y0=0, x1=1.5, y1=1, label=x)
p += c
print p
"""
from latextool_basic import console, makeandincludegraphics
print console(s.strip())
print makeandincludegraphics(python=s)
\end{python}
\end{samepage}


Left-to-right, align bottom:
\begin{samepage}
\begin{python}
s = r"""
from latextool_basic import *
p = Plot()

c = RectContainer(x=1, y=1)
for i, x in enumerate([1,2,3,4,5,6]):
    c += Rect2(x0=0, y0=0, x1=1+i/4.0, y1=1+i/4.0, linecolor='red', linewidth=0.2,
               label=r'{\texttt{%s}}' % x) 
c.layout()
p += c 

# boundary of container
p += Rect2(x0=c.x0, y0=c.y0, x1=c.x1, y1=c.y1, linewidth=0.1, linecolor='green')

p += Grid()
print p 
""" 
from latextool_basic import console, makeandincludegraphics
print console(s.strip())
print makeandincludegraphics(python=s)
\end{python}
\end{samepage}




